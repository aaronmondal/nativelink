{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": [".astro", ".wrangler", "dist", "node_modules"]
  },
  "javascript": {
    "globals": ["Bun"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useNamingConvention": "off"
      }
    },
    "ignore": [
      ".astro",
      ".wrangler",
      "dist",
      "node_modules",
      "src/components/PageFrame.astro"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineWidth": 80,
    "ignore": [
      ".astro",
      ".wrangler",
      "dist",
      "node_modules",
      "src/components/PageFrame.astro"
    ]
  }
}
